<% @user = User.find(params[:id])%>
<h3> Assign Picture </h3>
<%= form_for(:pinboard) do |f| %>

    <div class="form-group">
      <%= f.label :name, :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :name, :class => "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :picture, :class => "col-sm-2 control-label margin-top" %>
      <div class="col-sm-10">
        <%= f.file_field :picture, :class => "form-control margin-top" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <br/>
        <p class="pull-right"><%= f.submit :class => "btn btn-primary" %></p>
      </div>
    </div>
<% end %>
